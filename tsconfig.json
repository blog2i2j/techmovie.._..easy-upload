{
  "compilerOptions": { 
    "alwaysStrict": false,
    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "strict":true,
    "noUnusedLocals": true,
    "target": "ES2018",
    "module": "esnext",
    "lib": ["ESNext","ES2021"],
    "moduleResolution": "node",
    "resolveJsonModule":true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
    ],
   "paths": {
      "@/*": ["./src/*"],
    }
  }
}